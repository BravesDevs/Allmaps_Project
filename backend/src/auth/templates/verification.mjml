<mjml>
  <mj-head>
    <mj-title>Verify Your Allmaps Email</mj-title>
    <mj-attributes>
      <mj-all font-family="Inter, Helvetica, Arial, sans-serif" />
      <mj-text font-size="16px" color="#333333" line-height="24px" />
      <mj-button background-color="#90EE90" color="#228B22" font-weight="bold" border-radius="8px" padding="10px 25px" border="1px solid #228B22" />
    </mj-attributes>
    <mj-style inline="inline">
      .hover-scale:hover { transform: scale(1.05); transition: transform 0.2s; }
    </mj-style>
  </mj-head>
  <mj-body background-color="#F5F5F5">
    
    <!-- Header -->
    <mj-section padding-bottom="0">
      <mj-column>
        <mj-image width="150px" src="https://placehold.co/200x50/white/228B22?text=ALLMAPS" alt="Allmaps Logo" />
      </mj-column>
    </mj-section>
    
    <!-- Hero Section -->
    <mj-section background-color="#ffffff" border-radius="8px" padding-top="20px">
      <mj-column>
        <mj-text align="center" font-size="28px" font-weight="bold" color="#228B22">
          Verify Your Email Adventure Awaits!
        </mj-text>
        <mj-text align="center" padding-top="0" font-size="18px" color="#666666">
          Confirm your email to unlock workflow saving and map your world.
        </mj-text>

        <!-- Progress Bar (Gamification) -->
        <mj-divider border-width="0px" padding="10px" />
        <mj-text align="center" font-size="12px" color="#999">
          Verification: 1/3 Steps Complete
        </mj-text>
        <mj-raw>
          <div style="background:#e0e0e0; border-radius:10px; height:6px; width:60%; margin:0 auto; overflow:hidden;">
            <div style="background:#228B22; height:100%; width:33%;"></div>
          </div>
        </mj-raw>
      </mj-column>
    </mj-section>

    <!-- Body Content -->
    <mj-section background-color="#ffffff" border-radius="0 0 8px 8px">
      <mj-column>
        <mj-text>
          Hi {{name}},
        </mj-text>
        <mj-text>
          Welcome to Allmaps! You're just one click away from starting your journey. 
        </mj-text>
        
        <mj-button href="{{verificationLink}}" css-class="hover-scale">
          Verify Email Now
        </mj-button>
        
        <mj-text align="center" font-size="14px">
          <a href="{{verificationLink}}" style="color: #228B22; text-decoration: underline;">{{verificationLink}}</a>
        </mj-text>

         <mj-text align="center" font-style="italic" color="#888">
          Once verified, dive into seamless workflow creation—no more limits!
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section>
      <mj-column>
        <mj-text align="center" font-size="12px" color="#999999">
          © 2025 Allmaps. Explore without boundaries.
        </mj-text>
        <mj-text align="center" font-size="12px" color="#999999">
          <a href="#" style="color:#999; text-decoration:none;">Unsubscribe</a> | 
          <a href="#" style="color:#999; text-decoration:none;">Privacy Policy</a>
        </mj-text>
      </mj-column>
    </mj-section>

  </mj-body>
</mjml>
